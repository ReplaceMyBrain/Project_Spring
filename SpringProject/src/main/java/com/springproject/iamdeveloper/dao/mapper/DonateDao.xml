<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.springproject.iamdeveloper.dao.DonateDao">
	
	<select id="donation" resultType="com.springproject.iamdeveloper.dto.DonateDto">
		SELECT SUM(DONATE_AMOUNT) AS SUMDONATE FROM DONATE
	</select>
	
	<insert id="donateClick">
		INSERT INTO DONATE (DONATE_AMOUNT) VALUES (#{param1})
	</insert>
	
</mapper>